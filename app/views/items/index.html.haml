= link_to 'Create new', new_item_path
%table
  %thead
    %th Name
    %th Desciption
    %th UPC
    %th Kind
    %th Color
    %th Size
  %tbody
    - @items.each do |i|
      %tr
        %td= i.name        if i.name
        %td= i.description if i.description
        %td= i.upc         if i.upc
        %td= i.kind        if i.kind
        %td= i.color       if i.color
        %td= i.size        if i.size
        %td= link_to 'show', item_path(i)
        %td= link_to 'edit', edit_item_path(i)
        %td= link_to 'destroy', item_path(i), method: :delete