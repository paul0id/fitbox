= form_for(@item) do |f|
  .form-group
    = f.label :name, class: 'control-label'
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description, class: 'control-label'
    = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :upc, class: 'control-label'
    = f.text_field :upc, class: 'form-control'
  .form-group
    = f.label :color, class: 'control-label'
    = f.text_field :color, class: 'form-control'
  .form-group
    = f.label :picture, class: 'control-label'
    = f.file_field :picture, class: 'form-control'
  .form-group
    = f.label :kind, class: 'control-label'
    = f.select :kind, options_for_select(Item.kinds.keys, @item.kind), include_blank: true, class: 'form-control'
  .form-group
    = f.label :size, class: 'control-label'
    = f.text_field :size, class: 'form-control'
  .form-group
    = f.submit class: 'btn btn-primary'
