doctype html
html lang="en" 
  head
    title Fitbox
    = stylesheet_link_tag 'bootstrap.min', :media => 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'style', :media => 'all', 'data-turbolinks-track' => true

    script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" 
    = javascript_include_tag 'bootstrap.min', 'data-turbolinks-track' => true
    = javascript_include_tag 'jquery.smint', 'data-turbolinks-track' => true
    = csrf_meta_tags
    javascript:
      $(document).ready( function() {
          $('.navbar-collapse ').smint({
            'scrollSpeed' : 1000
          });
      })
  body
    div
      .navbar.navbar-inverse.navbar-static-top role="navigation" 
        .row
          .col-xs-3.col-md-3.logo_block
            a href="/" 
              img src=image_path('logo.png') /
          .col-md-9
            .navbar-header
              button.navbar-toggle data-target=".navbar-collapse" data-toggle="collapse" type="button" 
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
          .col-md-9
            .navbar-collapse.collapse
              ul.nav.navbar-nav
                li.active
                  a.intLink href="#top_banner_link"  Home
                li
                  a.intLink href="#howworks_link"  how it works
                li
                  a.intLink href="#get_started_link"  get started
                li
                  a href="#"  F.A.Q
                li
                  a.intLink href="#about_link"  about
                - unless current_user
                  li
                    = link_to 'Sign Up', new_user_registration_path, class: 'sign_in'
                -else
                  li
                    a href="/users/#{current_user.id}"
                      | Profile
            /! /.navbar-collapse
      /! Main jumbotron for a primary marketing message or call to action
      #top_banner.top_banner_link
        img src=image_path('1headerimage.png') /
        .centered_block
          = link_to 'get started', new_user_session_path, class: 'get_started'
      #howworks.howworks_link
        .howworks_line
          .row.center-row
            .col-xs-6.col-md-6.center
              img.img-responsive.pull-right src=image_path('2-1.png') /
            .col-xs-6.col-md-6.center.text_block
              h1 tell us about you
              p.text_block_desc Tell us your size and style preference, and make requests for your regularly scheduled shipments.
        .howworks_line
          .row.center-row
            .col-xs-6.col-md-6.center.text_block
              h1 receive your items
              p.text_block_desc After choosing to accept or decline your items, you will receive up to 5 personally picked items according to the choices you made during profile creation.
            .col-xs-6.col-md-6.center
              img.img-responsive.pull-right src=image_path('2-2.png') /
        .howworks_line
          .row.center-row
            .col-xs-6.col-md-6.center
              img.img-responsive.pull-right src=image_path('2-3.png') /
            .col-xs-6.col-md-6.center.text_block
              h1 do you like it?
              p.text_block_desc You have 5days to try everything on. Only pay for what you keep, and return the rest.
      #likeit.likeit
        .row.center-row.container
          .col-xs-9.col-md-7.center
            h1
              | are you a member of one
              br/
              | of our selected gyms?
            p.desc Enter you membership code to get discounts and latest news
            .row.center-row.container
              .col-xs-12.col-md-12.center
                .input-group
                  input.form-control.input-lg placeholder=("enter your membership code") type="text" /
                  span.input-group-btn
                    button.btn.btn-default.btn-lg type="button"  Submit
                /! /input-group
              /! /.col-lg-6
            /! /.row
      #get_started.get_started_link
        img src=image_path('4getstarted.png') /
        .row
          .col-xs-8.ol-md-8
            h1 get started
            p.desc
              | Just click below and answer a few questions, 
              br
              | and we'll match you with your very own personal stylist.
            = link_to 'get started', new_user_session_path, class: 'get_started', style: 'display: inline-block;'
        div
      #about.about_link
