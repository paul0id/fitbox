<!DOCTYPE html>
<html>
<head>
  <title>Fitbox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% unless current_user %>
  <%= link_to_unless_current 'Log In', new_user_session_path %>
  <%= link_to_unless_current 'Sign Up', new_user_registration_path %>
<% else %>
  <%= link_to_unless_current 'Home', root_path %>
  <% if current_user.type == 'Admin'%>
    <%= link_to_unless_current 'Managers', managers_path %>
  <% end %>
  <% if current_user.type == 'Admin' || current_user.type == 'Manager' %>
    <%= link_to_unless_current 'Clients', clients_path %>
    <%= link_to_unless_current 'Items', items_path %>
  <% end %>
  <%= link_to_unless_current 'My Profile', my_user_path(current_user) %>
  <%= link_to_unless_current 'Log Out', destroy_user_session_path, method: :delete %>

<% end %>
<br>
<%= yield %>

</body>
</html>
